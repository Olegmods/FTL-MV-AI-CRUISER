    <mod-append:choice req="RVS_REQ_HOLO_REVIVE" blue="false">
        <text>Revive a hologram.</text>
        <event load="RVS_STORAGE_CHECK_HOLO_REVIVE"/>
    </mod-append:choice>
    <mod-append:choice req="RVS_HOLO_MAKER" blue="false">
        <text>Create a hologram.</text>
        <event load="RVS_STORAGE_CHECK_HOLO_MAKER"/>
    </mod-append:choice>
    
